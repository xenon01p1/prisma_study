model User {
  id        Int              @id @default(autoincrement())
  email     String           @unique
  name      String?
  devGames  Game[]
  favGames  FavoriteGame[]
}

model Game {
  id      String   @id @default(uuid())
  name    String
  genre   String

  userId  Int
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  favoritedBy FavoriteGame[] @relation("GameFavorites")
}

model FavoriteGame {
  id      Int    @id @default(autoincrement())
  rating  Float

  userId  Int
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  gameId  String
  game   Game @relation("GameFavorites", fields: [gameId], references: [id])

  @@unique([userId, gameId])
}

